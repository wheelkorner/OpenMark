<div class="container">
    <section class="section">
        <div class="project-container">
        {% for frete in dados %}
                <div class="project-box" onclick="$('#modalExample').modal('hide');" >
                <h3>{{ frete.transp_nome }}</h3>
                <label><strong>{{ frete.descricao }}</strong></label>
                <label>Valor Frete:<strong> $ {{ frete.vlrFrete }} </strong></label>
                <label>Prazo Entrega: {{ frete.prazoEnt }} dias</label>
                <label>Previs√£o Entrega: {{ frete.dtPrevEnt|date("d/m/Y") }}</label>
                </div>
        {% endfor %}
            </div>
    </section>
</div>

<style>

@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200&display=swap');

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

.section {
    padding-block: 20px;
}

h3 {
    font-size: 20px;
    font-weight: 300;
    margin-bottom: 15px;
}

.container {
    width: 100%;
    position: relative;
}

.project-container {
    display: flex;
    width: 100%;
    justify-content: center;
    gap: 10px;
    flex-wrap: wrap;
}
.project-box {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 23%;
    height: 200px;
    background: white;
    border-radius: 10px;
    box-shadow: 1px 8px 10px 2px gray;
    overflow: hidden;
}

.project-box label, p {
    font-size: 15px;
    color: #777;
}
.project-box::after {
    content: '';
    position: absolute;
    bottom: -100%;
    background: #f1f1f1;
    width: 100%;
    height: 100%;
    transition: .4s;
    z-index: 1;
}
.project-box:hover.project-box::after{
    bottom: 0;
}
.project-box:hover.project-box i,
.project-box:hover.project-box>h3,
.project-box:hover.project-box>label {
    color: #4183c4;
    z-index: 2;
}
</style>