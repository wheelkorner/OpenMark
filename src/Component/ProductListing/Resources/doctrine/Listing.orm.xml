<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="BitBag\OpenMarketplace\Component\ProductListing\Entity\Listing" table="bitbag_open_marketplace_product_listing">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="uuid" type="uuid" unique="true" />

        <field name="code" column="code" type="string" unique="false" nullable="false" />
        <field name="publishedAt" column="published_at" type="datetime" nullable="true"/>
        <field name="lastVerifiedAt" column="last_verified_at" type="datetime" nullable="true"/>
        <field name="createdAt" column="created_at" type="datetime" nullable="true"/>
        <field name="removed" column="deleted" type="boolean"/>
        <field name="enabled" type="boolean"/>
        <field name="verificationStatus" type="string"/>

        <one-to-one field="latestDraft" target-entity="BitBag\OpenMarketplace\Component\ProductListing\Entity\DraftInterface">
            <join-column name="latest_draft_id" nullable="true" on-delete="SET NULL" />
            <cascade>
                <cascade-remove />
            </cascade>
        </one-to-one>

        <many-to-one field="vendor" target-entity="BitBag\OpenMarketplace\Component\Vendor\Entity\VendorInterface" inversed-by="productListings">
            <join-column name="vendor_id" on-delete="SET NULL"/>
            <cascade>
                <cascade-remove/>
            </cascade>
        </many-to-one>

        <one-to-many field="productDrafts" target-entity="BitBag\OpenMarketplace\Component\ProductListing\Entity\DraftInterface" mapped-by="productListing">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <many-to-one field="product" target-entity="Sylius\Component\Product\Model\ProductInterface">
            <join-column name="product_id" on-delete="SET NULL"/>
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </many-to-one>

        <indexes>
            <index name="code" columns="code" />
        </indexes>
    </mapped-superclass>
</doctrine-mapping>
