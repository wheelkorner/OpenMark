<resources xmlns="https://api-platform.com/schema/metadata"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="https://api-platform.com/schema/metadata https://api-platform.com/schema/metadata/metadata-2.0.xsd"
>
    <resource class="%open_marketplace.model.conversation_category.class%" shortName="ConversationCategory">
        <collectionOperations>
            <collectionOperation name="vendor_get">
                <attribute name="method">GET</attribute>
                <attribute name="path">/shop/account/vendor/categories</attribute>
                <attribute name="normalization_context">
                    <attribute name="groups">shop:account:vendor:category:read</attribute>
                </attribute>
            </collectionOperation>
        </collectionOperations>
        <itemOperations>
            <itemOperation name="vendor_get">
                <attribute name="method">GET</attribute>
                <attribute name="path">/shop/account/vendor/categories/{id}</attribute>
                <attribute name="normalization_context">
                    <attribute name="groups">shop:account:vendor:category:read</attribute>
                </attribute>
            </itemOperation>
        </itemOperations>

        <property name="id" identifier="true" writable="false" />
    </resource>
</resources>
